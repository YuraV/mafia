%ul.nav.nav-tabs
  %li
    = link_to 'Games', games_path
  %li
    = link_to 'Scores', scores_path
  - if can? :manage_roles, @user
    %li.active
      = link_to 'Users', users_path
= form_tag @user, method: :get, class: 'form-search', id: 'search' do
  .input-append
    = text_field_tag :search, params[:search], class: 'span2 search-query'
    = submit_tag 'Search', class: 'btn'
