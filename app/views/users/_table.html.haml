%table.table.table-striped.table-bordered.bordered.zebra

  %thead
    %tr
      %th{:style => 'width: 10%'} User ID
      %th{:style => 'width: 10%'}=sortable 'name','name'
      %th{:style => 'width: 10%'} E-mail
      %th{:style => 'width: 10%'}

    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= user.email
        %td
          .btn-group
            =link_to 'Actions', '', class: 'btn btn-primary dropdown-toggle'
            =link_to '', class: 'btn btn-primary dropdown-toggle' do
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to user_path(user) do
                  %i.icon-th
                  Show
              %li
                = link_to edit_user_path(user) do
                  %i.icon-pencil
                  Edit
              %li
                = link_to user_path(user), method: :delete do
                  %i.icon-trash
                  Destroy
.new
  =link_to "New", new_user_path, class: 'btn btn-primary'
#pagination= will_paginate @users
